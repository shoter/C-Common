<UserControl x:Class="Common.WPF.Controls.CloseableHeader"

      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"

      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 

      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 

      mc:Ignorable="d" 

      d:DesignHeight="23" d:DesignWidth="81" Margin="0">
	<DockPanel VerticalAlignment="Center">
		<Button Content="X"  Height="23" HorizontalAlignment="Right" DockPanel.Dock="Right" 

          Name="CloseButton" VerticalAlignment="Center" Width="20" FontFamily="Courier" 

          FontWeight="Bold" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
				
		Margin="0"

          FontStretch="Normal" Visibility="Visible" 

          FontSize="14"   ToolTip="Close"/>
		<Label Content="TabItem"  Height="23" HorizontalAlignment="Left"  DockPanel.Dock="Right" 

          Name="Header" VerticalAlignment="Center" 

          FontFamily="Courier" FontSize="12" />
	</DockPanel>
</UserControl>